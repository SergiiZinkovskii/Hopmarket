@model List<Market.Domain.ViewModels.Order.OrderViewModel>

@{
    ViewBag.Title = "Кошик";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <div class="col-md-12 text-center">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title">Список замовлень пустий :(</h5>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mt-4">
                    <div class="card">
                        <div class="card-header">
                            @if (item.Photo != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo?.ImageData ?? Array.Empty<byte>())" class="card-img-top" alt="@item.ProductName" />
                            }
                            else
                            {
                                <img src="https://example.com/default-image.jpg" class="card-img-top" alt="@item.ProductName" />
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p class="card-text">Модель: @item.Model</p>
                            <p class="card-text">Тип: @item.TypeProduct</p>
                            <p class="card-text">Ціна: @item.Price</p>
                            <p class="card-text">Кількість: @item.Quantity</p>
                        </div>
                        <div class="card-footer text-center">
                            <button class="btn btn-primary" onclick="openModal({ url: '/Basket/GetItem', data: '@item.Id' })"
                                    data-toggle="ajax-modal" data-target="Modal">
                                Відкрити
                            </button>
                            <a asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Видалити</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
