<body class="backgroundImage d-flex  flex-column h-100">

    
    <div class="container-fluid col-xl-12">
        <main role="main">
            @RenderBody()
        </main>
    </div>



    <div class="modal fade" id="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Інформація</h5>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
                    @if (User.IsInRole("Admin"))
                    {
                        <button type="button" class="btn btn-primary" id="saveBtn">Зберегти</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalWhButtons" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Інформація</h5>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>


</body>
